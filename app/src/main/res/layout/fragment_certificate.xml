<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab_pages.CertificateFragment"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/certTitleView"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Certifications"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/addCert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_item_icon"
            android:layout_toEndOf="@id/certTitleView"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:id="@+id/certEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_icon"
            android:layout_toEndOf="@id/addCert" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noCert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No certifications found"
        android:textColor="@color/black"
        android:visibility="gone" />

</LinearLayout>
