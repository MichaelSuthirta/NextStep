<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome To NextStep!"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sub judul -->
    <TextView
        android:id="@+id/tvSubtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Define Your Vision, Achieve Your Ambition"
        android:textSize="12sp"
        android:textColor="#777777"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:contentDescription="App Logo"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/tvDescription2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="#777777"
        android:textSize="13sp"
        android:lineSpacingExtra="2dp"
        android:gravity="center"
        android:text="Di halaman ini kamu bisa menjelaskan fitur lain dari aplikasi, misalnya bagaimana pengguna mengatur tujuan, memantau progres, dan mendapatkan insight."
        app:layout_constraintTop_toBottomOf="@id/imgLogo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tombol kiri (misal: Back / Skip) -->
    <Button
        android:id="@+id/btnPrev"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="40dp"
        android:text="Back"
        android:textSize="12sp"
        android:background="@drawable/btn_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Tombol kanan (Next) -->
    <Button
        android:id="@+id/btnNext2"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        android:text="Next"
        android:textSize="12sp"
        android:background="@drawable/btn_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dot indicator (dot kedua aktif) -->
    <LinearLayout
        android:id="@+id/llDots2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_inactive"
            android:layout_margin="4dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_active"
            android:layout_margin="4dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_inactive"
            android:layout_margin="4dp"/>

<!--        <View-->
<!--            android:layout_width="8dp"-->
<!--            android:layout_height="8dp"-->
<!--            android:background="@drawable/dot_inactive"-->
<!--            android:layout_margin="4dp"/>-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
