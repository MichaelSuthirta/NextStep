<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab_pages.ProfileFragment"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/aboutMeTitle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="About Me"
            android:textColor="@color/black"
            android:textSize="24sp"
            />

        <ImageView
            android:id="@+id/abtMeEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_icon"
            android:layout_toEndOf="@id/aboutMeTitle"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/aboutMeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write descriptions here"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >

        <TextView
            android:id="@+id/titleView"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Experiences"
            android:textColor="@color/black"
            android:textSize="24sp"
            />

        <ImageView
            android:id="@+id/addExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_item_icon"
            android:layout_toEndOf="@id/titleView"
            android:layout_marginEnd="15dp"
            />

        <ImageView
            android:id="@+id/expEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_icon"
            android:layout_toEndOf="@id/addExp"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvExperience"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noExp"
        android:text="No experience found"
        android:visibility="gone"
        />

</LinearLayout>